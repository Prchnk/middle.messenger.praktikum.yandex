<h2>{{title}}</h2>

<form class="form form-profile">

	{{#each list}}
		<div class="form-profile__item" data-type="form-profile-item" data-input-name="{{ this.name }}"
				 data-value="{{ this.name }}">

			<div class="form-profile__item-info" data-type="form-profile-item-info">
				<div class="form-profile__item-info-text" data-type="form-profile-item-info-text">{{ this.name }}</div>
				<button type="button" class="btn form-profile__edit-btn" data-type="form-profile-edit-btn">Edit</button>
			</div>

			<div class="form-profile__input-wrapper shadow-input" data-type="form-profile-input-wrapper">
				<div class="injectInputComponent"></div>
				{{!-- <input type="text" name="{{ this.name }}" class="form-profile__input" data-type="form-profile-input"> --}}
				<button type="button" class="form-profile__save-btn btn" data-type="form-profile-save-btn">Save</button>
			</div>

		</div>

	{{/each}}

	<button type="submit" class="btn btn_submit">Сохранить</button>

</form>
